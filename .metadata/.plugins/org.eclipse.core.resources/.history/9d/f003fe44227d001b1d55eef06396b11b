package ratioform;

import org.apache.commons.io.FileUtils;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.testng.annotations.Test;
import java.io.File;
import java.io.IOException;
import java.text.SimpleDateFormat;
import java.util.Date;

public class Utility {
	WebDriver driver;

  @Test
  
  public  String getScreenshot(WebDriver driver,String screenshotname) throws IOException {
	  
  String datename=new SimpleDateFormat("yyyymmddhhmmss").format(new Date());
	File scrFile=((TakesScreenshot)driver).getScreenshotAs(OutputType.FILE);
	
	//String destination = System.getProperty("C:\\eclipse-workspace\\AutomationReports\\screenshots"+ screenshotname + datename+".png");
	String destination = System.getProperty("C:\\eclipse-workspace\\AutomationReports\\screenshots.png");
	File finaldestination=new File(destination);
	FileUtils.copyFile(scrFile,finaldestination );
	return destination;
	  
  }
}
