package com.Ratioform.Testcases;

import org.testng.annotations.Test;

import com.Ratioform.pages.BasePage;
import com.Ratioform.pages.SearchPage;
import com.relevantcodes.extentreports.ExtentReports;
import com.relevantcodes.extentreports.ExtentTest;
import com.relevantcodes.extentreports.LogStatus;

import org.testng.annotations.BeforeClass;

import java.io.IOException;
import java.text.SimpleDateFormat;
import java.util.Date;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.Assert;
import org.testng.ITestResult;
import org.testng.annotations.AfterClass;

public class SearchTest extends BasePage{
	WebDriver driver;
	ExtentReports extent;
	ExtentTest test;


  @Test
  public void verifySearch() {
	  SearchPage sp=new SearchPage(driver);
	  sp.SearchProduct("plates");
	  sp.ClickSearchButton();
		this.driver=new ChromeDriver();
  }
  
  @BeforeClass
  public void setUp() throws InterruptedException {
		String fileName = new SimpleDateFormat("yyyyMMddHHmm'.txt'").format(new Date());
		extent = new ExtentReports("C:\\eclipse-workspace\\AutomationReports\\ExtentReports("+fileName+").html");
		String s=this.getClass().getSimpleName();
		test=extent.startTest(s,"This is a test to Verify Search functionality");
		test.assignAuthor("sowndarya");
		init();
	
		String title= driver.getTitle();
		Assert.assertEquals(true, title.contains("Amazon"));
				test.log(LogStatus.PASS," Successfully Navigated to RatioForm Homepage");
				
  }

  public void TearDown(ITestResult Result) throws IOException {
		System.out.println("Result.getStatus()"+Result.getStatus());
		if(Result.getStatus()==ITestResult.FAILURE) {
			test.log(LogStatus.FAIL, "unable to navigate to home page");
			String screenshotpath=getScreenshot(driver, Result.getName());
			String image= test.addScreenCapture(screenshotpath);
			test.log(LogStatus.FAIL, "unable to navigate to homepage", image);		
			extent.endTest(test);
			
		}
		extent.flush();
		driver.close();
		driver.quit();
	}

}
